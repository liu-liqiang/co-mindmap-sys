# 生产环境配置文件
# 复制此文件为 .env 并修改相应的值

# Django 配置
SECRET_KEY=your-very-secret-key-change-this-in-production
DEBUG=False

# 数据库配置
POSTGRES_DB=mindmap_db
POSTGRES_USER=mindmap_user
POSTGRES_PASSWORD=your-strong-database-password

# 域名配置（请根据实际域名修改）
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com,www.yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost,http://127.0.0.1,https://yourdomain.com,https://www.yourdomain.com
CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1,https://yourdomain.com,https://www.yourdomain.com

# 邮件配置（可选）
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Redis 配置
REDIS_URL=redis://redis:6379/0
